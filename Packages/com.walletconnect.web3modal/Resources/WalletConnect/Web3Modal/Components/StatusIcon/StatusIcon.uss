.status-icon__icon-container {
    padding: 25%;
    border-radius: 1000;
    align-items: center;
    justify-content: center;
}

.status-icon__icon-container--color-error {
    background-color: var(--wui-color-bg-error-100);
}

.status-icon__icon-container--color-error > .status-icon__icon {
    --unity-image-tint-color: var(--wui-color-error-100);
}

.status-icon__icon-container--color-success {
    background-color: var(--wui-color-bg-success-100);
}

.status-icon__icon-container--color-success > .status-icon__icon {
    --unity-image-tint-color: var(--wui-color-success-100);
}

.status-icon__icon {
    --unity-image: resource("WalletConnect/Web3Modal/Icons/icon_medium_checkmark");
}